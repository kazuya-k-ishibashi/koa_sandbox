{
  "name": "app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist/*",
    "compile": "ttsc",
    "test": "ava",
    "build": "run-s clean compile test",
    "serve": "node ./dist/src/bootstrap.js",
    "start": "run-s build serve",
    "watch:compile": "ttsc -w",
    "watch:test": "ava -w",
    "//watch:test": "ts-node ./test/_watcher.ts",
    "watch:serve": "nodemon -L ./dist/src/bootstrap.js",
    "watch": "run-p watch:*",
    "dev": "run-s build watch",
    "//dev": "ts-node-dev --compiler ttypescript --respawn ./src/bootstrap.ts"
  },
  "ava": {
    "files": [
      "dist/test/**/*.js",
      "!dist/test/**/_*.*"
    ],
    "verbose": true
  },
  "dependencies": {
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-json": "^2.0.2",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.4.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.8.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-multer": "^1.0.0",
    "@types/koa-router": "^7.0.40",
    "@types/uuid": "^3.4.4",
    "ava": "^2.1.0",
    "cpx": "^1.5.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "ts-node": "^8.2.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "ttypescript": "^1.5.6",
    "typescript": "^3.5.1",
    "typescript-transform-paths": "^1.1.3"
  }
}
